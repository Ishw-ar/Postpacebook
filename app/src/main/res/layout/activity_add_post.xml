<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.AddPost.AddPostActivity">

    <include
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/post_layout"
        layout="@layout/add_post_layout"/>
<include
    android:layout_below="@+id/post_layout"
    android:id="@+id/name_sec"
    layout="@layout/post_name_section"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"/>


    <androidx.viewpager.widget.ViewPager
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_below="@+id/name_sec"
        android:layout_height="match_parent"
        android:id="@+id/postviewpager"/>


</RelativeLayout>