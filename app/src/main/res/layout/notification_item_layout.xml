<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/notiProfile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_website___female_user_512"
        app:civ_border_width="2dp"
        android:padding="@dimen/dp_10"
        app:civ_border_color="#FF000000"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/notiUsername"
        android:layout_width="match_parent"
        android:text="Username"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/black"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/notiDescription"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/black"
        android:layout_below="@+id/notiUsername"
        android:layout_width="match_parent"
        android:text="Description"
        android:padding="@dimen/dp_10"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_noun_more_1392403"
        android:layout_marginStart="@dimen/dp_200"
        android:layout_height="wrap_content"/>



</RelativeLayout>

</LinearLayout>